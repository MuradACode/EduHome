@model List<Slider>

<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <a class="btn btn-primary mb-4" asp-area="admin" asp-controller="dashboard" asp-action="index">Go Back</a>
                    </div>
                    <h4 class="card-title">Slider</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Body
                                    </th>
                                    <th>
                                        Settings
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slider in Model)
                                {
                                    <tr>
                                        <td class="py-1">
                                            <img src="~/assets/uploads/products/@slider.ImgUrl" class="img-fluid" alt="..." />
                                        </td>
                                        <td>
                                            @slider.Title
                                        </td>
                                        <td>
                                            @slider.Body
                                        </td>
                                        <td>
                                            <a asp-area="admin" asp-controller="slider" asp-action="update" class="btn btn-warning mb-3">Update</a>
                                            <a asp-area="admin" asp-controller="slider" asp-action="delete" class="btn btn-danger">Delete</a>
                                            <a asp-area="admin" asp-controller="slider" asp-action="delete" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>